<?xml version="1.0" encoding="utf-8"?>
<com.kedacom.platform2mc.ui.TimeLineView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/timelineview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/currentDate"
            android:layout_width="wrap_content"
            android:layout_height="20dip"
            android:layout_gravity="left"
            android:layout_marginLeft="10dip"
            android:text="----/--/--"
            android:textColor="@color/white"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:gravity="center"
            android:text="--:--:--"
            android:textColor="@color/white"
            android:textSize="12dip" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <com.kedacom.platform2mc.ui.TimeLineContainer
            android:id="@+id/timelinecontainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <com.kedacom.platform2mc.ui.TimeLine
                android:id="@+id/timeline"
                android:layout_width="match_parent"
                android:layout_height="70dp" />
        </com.kedacom.platform2mc.ui.TimeLineContainer>

        <TextView
            android:layout_width="2dip"
            android:layout_height="60dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dip"
            android:background="#C8EC6941" />
    </FrameLayout>

</com.kedacom.platform2mc.ui.TimeLineView>