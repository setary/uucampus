<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/user_icon"
        android:layout_width="match_parent"
        android:layout_height="120dip"
        android:layout_alignParentTop="true"
        android:drawableTop="@drawable/style_user_icon"
        android:gravity="center"
        android:paddingTop="8dip"
        android:textSize="18sp"
        android:text="@string/app_name"
        android:textColor="@color/white" />

    <RelativeLayout
        android:id="@+id/buttom_layout"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/log_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/style_user_button"
            android:layout_alignParentRight="true" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/log_out"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/buttom_layout"
        android:layout_below="@id/user_icon"
        android:orientation="vertical"
        android:paddingTop="5dip" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/navigation_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/navigation_live"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/style_navigation_button_bg"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="16dip"
                    android:drawableTop="@drawable/style_navigation_live_icon"
                    android:gravity="center"
                    android:text="@string/live_preview_title"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>

			<TextView
	        	android:id="@+id/divisionLine"
	            android:layout_width="1dip"
	        	android:layout_height="match_parent"
	            android:background="#FF343A43"/>

			<LinearLayout
                android:id="@+id/review_record"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@drawable/style_navigation_button_bg"
                android:descendantFocusability="blocksDescendants"
                android:orientation="vertical" >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="16dip"
                    android:drawableTop="@drawable/style_navigation_record_review"
                    android:gravity="center"
                    android:text="@string/review_record_title"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>

